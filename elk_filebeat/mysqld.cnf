[mysqld]
pid-file	= /var/run/mysqld/mysqld.pid
socket		= /var/run/mysqld/mysqld.sock
datadir		= /var/lib/mysql
log-error=/var/log/mysql/error.log          		# 에러 로그 설정
general_log=ON										# 모든 쿼리 로그 설정
general_log_file=/var/log/mysql/general.log			# 모든 쿼리 로그 위치 설정
slow_query_log=ON									# 슬로우 쿼리 로그 설정
slow_query_log_file=/var/log/mysql/slow.log			# 슬로우 쿼리 로그 위치 설정
log_warnings=2										# 에러 로그에 경고 메시지를 추가
symbolic-links=0									# Disabling symbolic-links is recommended to prevent assorted security risks
